@model BeerSession.Models.Tasting

@{
    ViewData["Title"] = "AddParticipants";
}

<div class="row">
    <div class="col-4">
        <div class="basic-form">
            <h2>Add Participants</h2>
            <div class="form-group">
                <label>Name</label>
                <input id="namePart" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="emailPart" class="form-control" />
            </div>
            <input type="hidden" value="@Model.TastingTag.ToString()" id="tastingId" />
            <input type="button" id="participantButton" class="btn btn-default" value="Add participant"/>
        </div>
    </div>

    <div class="col-8">
        <div id="participantList">
            
        </div>
    </div>
</div>


<script src="~/lib/@@aspnet/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/paricipants.js"></script>
