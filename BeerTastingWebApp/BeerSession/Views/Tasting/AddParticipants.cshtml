@model BeerSession.Models.Tasting

@{
    ViewData["Title"] = "AddParticipants";
}

<div class="row">
    <div class="col-4">
        <div class="basic-form">
            <h2>Add Participants</h2>
            <div class="form-group">
                <label>Name</label>
                <input id="namePart" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="emailPart" class="form-control" />
            </div>
            <input type="hidden" value="@Model.TastingTag.ToString()" id="tastingId" />
            <input type="button" id="participantButton" class="btn btn-default" value="Add participant"/>
        </div>
        <div class="mt-4">
            <form asp-action="AddBeers" asp-controller="Tasting" method="post">
                <input name="tastingId" type="hidden" value="@Model.TastingTag.ToString()" />
                <input type="submit" value="I'm done, now add beers!" class="btn btn-default" />
            </form>
        </div>
    </div>

    <div class="col-8">
        <div id="participantList">
            <h2>Added participants</h2>
            @if (Model.Participants != null)
            {
                @foreach (var item in Model.Participants)
                {
                    <div id="@item.Name" class="card participant-card">
                        <div class="card-body">
                            <h5 class="card-title" id="part-name">@item.Name</h5>
                            <input id="email" type="hidden" value="@item.Email" />
                            <input class="btn btn-default" onclick="removePart(this)" type="button" id="@item.Name" value="Remove participant" />
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>


<script src="~/lib/@@aspnet/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/paricipants.js"></script>
