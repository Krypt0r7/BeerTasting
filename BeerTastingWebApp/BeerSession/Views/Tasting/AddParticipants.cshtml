@model BeerSession.Models.Tasting

@{
    ViewData["Title"] = "AddParticipants";
}

<div class="content-container">
    <div class="col-4">
        <div class="basic-form">
            <h2>Add Participants</h2>
            <div class="form-group">
                <label>Name</label>
                <input id="namePart" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="emailPart" type="email" class="form-control" />
            </div>
            <input type="hidden" value="@Model.TastingTag.ToString()" id="tastingId" />
            <input type="button" id="participantButton" class="button-primary" value="Add participant"/>
        </div>
        <div>
            <input list="user-list" type="text">
            <datalist id="user-list">
                @if (@Model.Users[0].User != null)
                {
                    @foreach (var item in Model.Users)
                    {
                        <option>@item.User.Email</option>
                    }
                }
            </datalist>
        </div>
        <div class="mt-4">
            <form asp-action="AddBeers" asp-controller="Tasting" method="post">
                <input name="tastingId" type="hidden" value="@Model.TastingTag.ToString()" />
                <input type="submit" value="I'm done, now add beers!" class="button-primary" />
            </form>
        </div>
    </div>
    <div class="list-container">
        <partial name="_participantPartial"></partial>
    </div>

</div>


<script src="~/lib/@@aspnet/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/paricipants.js"></script>
