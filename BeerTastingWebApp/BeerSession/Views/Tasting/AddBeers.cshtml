@model BeerSession.Models.Tasting

@{
    ViewData["Title"] = "AddBeers";
}


<div class="content-container">
    <div class="beer-form">
        <div class="basic-form">
            <h2>Add beers</h2>
            <button type="button" class="btn button-primary" id="systemet-button" >Add from systemet</button>
            <div class="form-group">
                <label>Name</label>
                <input id="beerName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Producer</label>
                <input id="producer" class="form-control" />
            </div>
            <div class="form-group">
                <label>Country</label>
                <input id="country" class="form-control" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input id="price" class="form-control" />
            </div>
            <div class="form-group">
                <label>Alcohol</label>
                <input id="alcohol" class="form-control" />
            </div>
            <div class="form-group">
                <label>Systemet number</label>
                <input id="sysNumb" class="form-control" />
            </div>
            <input type="hidden" value="@Model.TastingTag.ToString()" id="tastingId" />
            <input type="button" id="beerbutton" class="button-primary" value="Add beer" />
        </div>

        
        <div class="nav-buttons">
            <input onclick="goBack()" value="Go back" type="button" class="button-primary"  />
            <form asp-action="Session">
                <input type="hidden" name="tastingId" value="@Model.TastingTag" />
                <input id="nextStep" type="submit" value="I'm done. Let's GO!" class="button-primary" />
            </form>
        </div>
    </div>
    <div class="list-container">
        <partial name="_beersPartial"></partial>

    </div>
</div>

<partial name="_addFromSystemetPartial"></partial>

<script src="~/lib/@@aspnet/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/beers.js"></script>
