@model BeerSession.Models.Tasting

@{
    ViewData["Title"] = "AddBeers";
}


<div class="row">
    <div class="col-4">

        <div class="basic-form">
            <h2>Add beers</h2>
            <button type="button" class="btn btn-primary" id="systemet-button" data-toggle="modal" data-target=".bd-example-modal-lg">Add from systemet</button>
            <div class="form-group">
                <label>Name</label>
                <input id="beerName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Producer</label>
                <input id="producer" class="form-control" />
            </div>
            <div class="form-group">
                <label>Country</label>
                <input id="country" class="form-control" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input id="price" class="form-control" />
            </div>
            <div class="form-group">
                <label>Alcohol</label>
                <input id="alcohol" class="form-control" />
            </div>
            <div class="form-group">
                <label>Systemet number</label>
                <input id="sysNumb" class="form-control" />
            </div>
            <input type="hidden" value="@Model.TastingTag.ToString()" id="tastingId" />
            <input type="button" id="beerbutton" class="btn btn-default" value="Add beer" />
        </div>


        <div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content" style="padding: 30px">
                    <label>Type to get producer</label>
                    <div class="input-group mb-4">
                        <input type="text" class="form-control autocomplete" id="prodInput" aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" id="getBeersFromProd">Choose producer</button>
                        </div>
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Beers</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelect01"></select>
                    </div>
                    <div class="input-group mb-4">
                        <button class="btn btn-outline-secondary" id="beerChooseButton">Choose beer</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 nav-buttons">
            <input onclick="goBack()" value="Go back" type="button" class="btn btn-outline-secondary"  />
            <input id="nextStep" asp-action="AddBeers" type="button" value="I'm done, next step!" class="btn btn-default" />
        </div>
    </div>

    <div class="col-8">
        <div id="beersList">
            <h2>Added beers</h2>
            @if (Model.Beers != null)
            {
                @foreach (var item in Model.Beers)
                {
                    <div id="@item.ID" class="card participant-card">
                        <div class="card-body">
                        <h5 class="card-title" id="beer-name">@item.Name</h5>
                        <p>@item.Producer - @item.Country</p>
                        <p>@item.Price kr | @item.Alchohol%</p>
                        <input class="btn btn-default" type="button" value="Remove beer" onclick="removeTheBeer(this)" id="@item.ID"></div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<script src="~/js/autocomplete.js" type="text/javascript"></script>
<script src="~/lib/@@aspnet/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/beers.js"></script>
