@model BeerTastingWebApp.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="inlog-form">
    <h2>Login</h2>
    <form>
        <div class="form-group">
            <label>User name</label>
            <input class="form-control" type="text" placeholder="Enter your username" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" type="text" placeholder="Enter your password" />
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" /> Remember me
            </label>
        </div>
        <button type="submit" class="btn btn-default">Log in</button>
    </form>
    <a asp-controller="Home" asp-action="Signup">Do you want to create a new account</a>
</div>

