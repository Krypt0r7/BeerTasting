@model BeerTastingWebApp.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="inlog-form">
    <h2>Login</h2>
    <form method="post">
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="text" name="email" asp-for="Email" placeholder="Enter your email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" type="text" name="password" asp-for="Password" placeholder="Enter your password" />
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" /> Remember me
            </label>
        </div>
        <button asp-action="LoginUser" asp-controller="Home" type="submit" class="btn btn-default">Log in</button>
    </form>
    <a asp-controller="Home" asp-action="Signup">Do you want to create a new account</a>
</div>

